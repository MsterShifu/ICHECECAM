</br></br>

<p>Voici les skins actuellement en vente</p>
</div>
<div class="container" id="Lesskins">

 <!--h2><%= title %></h2>-->
</br></br>
  <a href="/skin/add" class="btn btn-sm btn-primary">Mettre en vente un skin</a><br/>
  <table id="Lesskins2" class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Nom du skin</th>
        <th>Jeu concerné</th>
        <th>Prix (euros)</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
        <% skins.forEach(function(user){ %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.jeu %></td>
                <td><%= user.prix %> euros</td>

                <td>
                    <a href="/skin/get/<%= user.id %>" class="btn btn-sm btn-primary">Voir</a>
                    <a href="/skin/edit/<%= user.id %>" class="btn btn-sm btn-primary">Modifier</a>
                    <!-- <a href="delete/<%= user.id %>" class="btn btn-sm btn-danger">Acheter</a> pour l'instant ça supprime -->
                    <a href="/skin/delete/<%= user.id %>" class="btn btn-sm btn-danger">Supprimer</a>
                    <a href="/cart/<%= user.id %>" class="btn btn-sm btn-success">Acheter</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
</div>
</br>

