<%- include('header.ejs') %>
<div class="container p-5">
  <h2 class="introsignup">Vous voulez modifier une info relative à un skin en vente ? Vous êtes au bon endroit!</h2>
  <form action="/skin/update" method="post">
    <input type="hidden" value="<%= user.id %>" name="id">
    <div class="infosignup">
        <label for="name" class="nomdescases">Nom du skin:</label>
        <input type="text" class="form-control" id="name" placeholder="Enter Name" value="<%= user.name %>" name="name" required>
    </div>    
    <div class="infosignup">
        <label for="jeu" class="nomdescases"> Jeu concerné</label>
        <input type="text" class="form-control" id="jeu" placeholder="Enter jeu" value="<%= user.jeu %>" name="jeu" required>
    </div>
    <div class="infosignup">
        <label for="prix" class="nomdescases">Prix voulu</label>
        <input type="number" class="form-control" id="pwd" placeholder="Enter Phone" value="<%= user.prix %>" name="prix" required>
    </div>
    <div class="login">
    <button type="submit" class="btn btn-primary">Envoyer</button>
</div>
</div>
</form>
</div>
